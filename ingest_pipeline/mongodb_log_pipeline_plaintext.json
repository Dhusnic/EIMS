{
  "description": "MongoDB plaintext log parsing pipeline", 
  "processors": [
    {
      "rename": {
        "field": "message",
        "target_field": "event.original",
        "if": "ctx.event?.original == null",
        "ignore_missing": true,
        "ignore_failure": true
      }
    },
    {
      "grok": {
        "field": "message",
        "patterns": ["%{TIMESTAMP_ISO8601:timestamp} %{WORD:log_level} %{GREEDYDATA:log_message}"]
      }
    }
  ]
}

